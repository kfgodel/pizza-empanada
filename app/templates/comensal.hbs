<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Definir menu</span>

        <div class="row">
          {{selector/de-comensal label="Comensal" comensalElegido=menu.comensal col="s4" }}
        </div>

        <div class="row">
          {{tenpines/input-number label="Empanadas" value=menu.cantidadDeEmpanadas  min=0 max=8 col="s3"}}
          {{tenpines/input-number label="Porciones de pizza" value=menu.cantidadDePorciones min=0 max=8 col="s3"}}
        </div>

      </div>

      <div class="card-action">
        <div class="row">
          {{tenpines/material-button label='Agregar' action='cerrarMenuYAgregar' submit=true col="offset-s10 s2" }}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    {{lista-de-menues menues=menues}}
  </div>
</div>
